    rows: 2

    Button:
        text: "This will be the canvas where everything is output/rendered \n scroll on the right"

    BoxLayout:
        orientation: "vertical"
        size_hint_x: .2

        ScrollView:
            GroupedGrid:
                orientation: "vertical"
